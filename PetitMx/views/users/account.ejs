<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/header.ejs') %> 

    <main class="fondo-main">
      <div class="container">
        <div class="row">
          <h2 class="title center-align brown-text">Mi cuenta</h2>

          <% if (locals.errors) { %>
            <% errors.forEach( (error) => { %>
              <h4 class="error">Error: <%= error.msg %></h4>
            <% }); %>
          <% } %>
          
          <form action="/users/account?_method=PUT" method="POST" enctype="multipart/form-data"  onsubmit="return alert('Los datos de tu cuenta se han actualizado con éxito!');">     
              
              <div class="card-sign-up hoverable"> <!-- INICIO de bloque de registro -->
                <div class="row">
                  <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input type="text" placeholder="Ej: Vicente" value="<%= user.first_name %>" id="first_name" name="first_name" data-name="Nombre">
                    <label for="first_name">Nombre: </label>
                    <div class="invalid-feedback"> </div>
                  </div>
                  <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input type="text" placeholder="Ej: Ruiz" value="<%= user.last_name %>" id="last_name" name="last_name" data-name="Apellido">
                    <label for="last_name">Apellido: </label>
                    <div class="invalid-feedback"> </div>
                  </div>
                </div>         
                <div class="row">
                  <div class="input-field">
                    <i class="material-icons prefix">email</i>
                    <input type="email" id="email" name="email" value="<%= email %>" placeholder="Ej: vicente@gmail.com" data-name="Email" required>
                    <label for="email">Correo: </label>
                    <div class="invalid-feedback"> </div>
                  </div>
                </div>   
                <div class="row"> <!-- INICIO de contraseñas -->
                  <div class="input-field col s6">
                    <i class="material-icons prefix">lock</i>
                    <input type="password" id="password" name="password" placeholder="********"
                                data-name="Nueva contraseña"  
                                minlength="8"
                                pattern="[A-Za-z][A-Za-z0-9]*[0-9][A-Za-z0-9]*"
                                title="La contraseña debe comenzar con una letra y contener al menos un dígito"
                                >
                    <div class="invalid-feedback"> </div>
                  </div>
                  <div class="input-field col s6">
                    <i class="material-icons prefix">lock_outline</i>
                    <input type="password" id="rePassword" name="rePassword"
                          data-name="Repetir Nueva Contraseña"   
                          placeholder="********"
                          minlength="8"
                          pattern="[A-Za-z][A-Za-z0-9]*[0-9][A-Za-z0-9]*"
                          title="La contraseña debe comenzar con una letra y contener al menos un dígito"
                          >
                    <div class="invalid-feedback" id="repasswordMessage"> </div>
                  </div>
                </div>   <!-- FIN de row de contraseña-->
                <div class="row"> <!-- INICIO de imagen de avatar -->
                  <div class="file-field input-field col s12">
                    <div class="row valign-wrapper">
                        <div class="col s4">
                          <img src="/img/users/avatars/<%= user.avatar %>" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
                        </div>
                    </div>
                    <div class="btn">
                      <span>Subir nueva imagen</span>
                      <input type="file" id="avatar" name="avatar" accept="image/*">
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text">
                    </div>
                  </div>
                  <div class="invalid-feedback"> </div>
                </div>
                <div class="registrar"> <!-- INICIO botón de enviar datos -->
                  <input type="submit" class="btn-reg-ini"  value="ACTUALIZAR">
                </div> <!-- FIN de botón de envio -->
              </div> <!-- FIN de bloque de registro -->

          </form>
        </div>
      </div>
    </main>

    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>
    <!--FIN DEL FOOTER -->

    <!-- JavaScript -->

    <%- include('../partials/scripts.ejs') %>
	  <script defer src="/js/validateRegister.js"></script>
    
  </body>
</html>
