<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/header.ejs') %> 

    <main class="fondo-main">
      <div class="container">
        <div class="row">
          <h2 class="title center-align brown-text">Mi cuenta</h2>

          <% if (locals.errors) { %>
            <% errors.forEach( (error) => { %>
              <h4 class="error">Error: <%= error.msg %></h4>
            <% }); %>
          <% } %>
          
          <form class="account" action="/users/account?_method=PUT" method="POST" enctype="multipart/form-data">     
              
              <div class="card-sign-up hoverable"> <!-- INICIO de bloque de registro -->
                <div class="row">
                  <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input type="text" placeholder="Ej: Vicente" value="<%= user.first_name %>" id="first_name" name="first_name" data-name="Nombre">
                    <label for="first_name">Nombre: </label>
                    <span class="helper-text"></span>
                  </div>
                  <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input type="text" placeholder="Ej: Ruiz" value="<%= user.last_name %>" id="last_name" name="last_name" data-name="Apellido">
                    <label for="last_name">Apellido: </label>
                    <div class="invalid-feedback"> </div>
                  </div>
                </div>         
                <div class="row">
                  <div class="input-field col s12 m10 l10">
                    <i class="material-icons prefix">email</i>
                    <input type="email" id="email" name="email" value="<%= email %>" placeholder="Ej: vicente@gmail.com" data-name="Email">
                    <label for="email">Correo: </label>
                    <span class="helper-text"></span>
                  </div>
                </div>   
                <div class="row"> <!-- INICIO de contraseñas -->
                  <div class="input-field col s6">
                    <i class="material-icons prefix">lock</i>
                    <input type="password" id="password" name="password" placeholder="********"
                                data-name="Contraseña"  
                                title="La contraseña debe comenzar con una letra y contener al menos un dígito">
                    <label for="email">Contraseña: </label>
                    <span class="helper-text"></span>
                  </div>
                  <div class="input-field col s6">
                    <i class="material-icons prefix">lock_outline</i>
                    <input type="password" id="rePassword" name="rePassword"
                          data-name="ReContraseña"   
                          placeholder="********"
                          title="La contraseña debe comenzar con una letra y contener al menos un dígito"
                          >
                    <label for="email">Re-Contraseña: </label>
                    <span class="helper-text"  id="repasswordMessage"></span>
                  </div>
                </div>   <!-- FIN de row de contraseña-->
                <div class="row"> <!-- INICIO de imagen de avatar -->
                  <div class="file-field input-field col s12 m12 l12">
                    <div class="row">
                        <div class="col s12 m12 l12 center-align">
                          <img src="/img/users/avatars/<%= user.avatar %>" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
                        </div>
                    </div>
                    <div class="file-path-wrapper col s9 m9 l9">
                      <input class="file-path" type="text" id="image-file"  name="image-file" data-name="Imagen">
                      <label for="avatar-file">Avatar:</label>
                      <span class="helper-text"></span>
                    </div>
                    <div class="btn col s3 m3 l3">
                      <span>Upload</span>
                      <input type="file" id="avatar" name="avatar">
                    </div>
                  </div>
                </div>
                <div class="registrar"> <!-- INICIO botón de enviar datos -->
                  <input type="submit" class="btn-reg-ini"  value="ACTUALIZAR">
                </div> <!-- FIN de botón de envio -->
              </div> <!-- FIN de bloque de registro -->

          </form>
        </div>
      </div>
    </main>

    <!-- FOOTER -->
    <%- include('../partials/footer.ejs') %>
    <!--FIN DEL FOOTER -->

    <!-- JavaScript -->

    <%- include('../partials/scripts.ejs') %>
	  <script type="text/javascript" src="/js/validator.min.js"></script>
	  <script type="text/javascript" src="/js/validateAccount.js"></script>
    
  </body>
</html>
